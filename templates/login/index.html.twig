{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section class="container-fluid d-flex flex-column align-items-center gap-5">
        <h2 class="text-white" >Connexion :</h2>
        <form action="{{ path('login') }}" class="d-flex flex-column display-6 text-white" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}"/>
            <br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="_password"/>
            {# If you want to control the URL the user is redirected to on success #}
            <input type="hidden" name="_target_path" value="/book/listing"/>
            <br>
            <div>
                <button type="submit" class="btn btn-primary fs-1">login</button>
                <a class="btn btn-primary fs-1" href={{path('app_register')}}>New User</a>
            </div>
        </form>
    </section>
{% endblock %}