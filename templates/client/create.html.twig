{% extends 'base.html.twig' %}

{% block title %}
{{title}}
{% endblock %}

{% block body %}

	<div class="container text-white d-flex flex-column align-items-center gap-3 fs-2">
		<h1>{{ title }}</h1>
		{{ form_start(form) }}
    <div class="row p-4">
			<div class="col">
				{{ form_row(form.first_name)}}
			</div>
			<div class="col">
				{{ form_row(form.last_name)}}
			</div>
			<div class="col">
				{{ form_row(form.birth_date)}}
			</div>
		</div>
	<div class="row p-4">
			<div class="col">
				{{ form_row(form.adress)}}
			</div>
			<div class="col">
				{{ form_row(form.city)}}
			</div>
	</div>
	<div class="row p-4">	
			<div class="col">
				{{ form_row(form.mail)}}
			</div>
			<div class="col">
				{{ form_row(form.phone)}}
			</div>
	</div>
		<div class="text-danger">
			{{form_errors(form)}}
		</div>
		{{ form_end(form) }}
</div>
		</div>
	{% endblock %}
